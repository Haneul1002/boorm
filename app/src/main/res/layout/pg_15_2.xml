<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".pg_12_java">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginTop="68dp"
        android:background="#00F6F3F3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/angle_left_solid"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <RelativeLayout
            android:id="@+id/RelativeLayout01"
            android:layout_width="fill_parent"
            android:layout_height="500dp"
            android:background="@drawable/border_top"
            android:nestedScrollingEnabled="false">

            <EditText
                android:id="@+id/editTextNumberDecimal"
                android:layout_width="303dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="35dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="금액을 입력해주세요."
                android:textColor="#c1c1c1" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextNumberDecimal"
                android:layout_alignParentStart="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/border"
                android:text="+5,000"
                android:textSize="18dp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextNumberDecimal"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/button10"
                android:background="@drawable/border"
                android:text="+10,000"
                android:textSize="18dp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextNumberDecimal"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/button11"
                android:background="@drawable/border"
                android:text="+30,000"
                android:textSize="18dp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextNumberDecimal"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/button12"
                android:background="@drawable/border"
                android:text="+50,000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button10"
                android:layout_alignParentStart="true"
                android:layout_marginStart="28dp"
                android:layout_marginTop="19dp"
                android:text="결제 수단"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button14"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_below="@+id/textView10"
                android:layout_alignParentStart="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="28dp"
                android:background="#EAE6CE"
                android:text="일반 결제"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button15"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_below="@+id/textView10"
                android:layout_marginStart="36dp"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@+id/button14"
                android:background="#EAE6CE"
                android:text="간편 결제"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button16"
                android:layout_width="310dp"
                android:layout_height="87dp"
                android:layout_below="@+id/button14"
                android:layout_alignParentStart="true"
                android:layout_marginStart="47dp"
                android:layout_marginTop="48dp"
                android:background="#7AD0F2"
                android:text="충전 하기"
                android:textSize="25dp" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="167dp"
        android:layout_height="45dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="36dp"
        android:text="포인트 조회"
        android:textColor="#000000"
        android:textSize="26dp"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>